﻿@model List<MyEgitimAkademiPortfolioo.Models.Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeteneklerim</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Yüzdesi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SkillID</td>
            <td>@item.SkillTitle</td>
            <td>@item.SkillValue</td>
            <td>
                <a href="#" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal-@item.SkillID">Sil</a>
            </td>
            <div class="modal fade" id="deleteModal-@item.SkillID" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Kaydı Sil</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bu kaydı silmek istediğinizden emin misiniz?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                            <a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Evet</a>
                        </div>
                    </div>
                </div>
            </div>
            <td><a class="btn btn-outline-success" href="/Skill/UpdateSkill/@item.SkillID">Güncelle</a></td>
        </tr>
    }

</table>
<td><a href="/Skill/AddSkill" class="btn btn-outline-primary">Yeni Yetenek Girişi</a></td>