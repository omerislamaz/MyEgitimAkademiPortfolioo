@model List<MyEgitimAkademiPortfolioo.Models.Education>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Bilgisi Ekranı</h2>

<table class="table table-bordered">
    <tr>
        <th>Eğitim ID</th>
        <th>Üniversite Adı</th>
        <th>Açıklama</th>
        <th>Mezuniyet Yılı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    {

    
<tr>
    <td>@item.EducationId</td>
    <td>@item.EducationName</td>
    <td>@item.EducationDescription</td>
    <td>@item.EducationGraduation</td>
    <td>
        <a href="#" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal-@item.EducationId">Sil</a>
    </td>

    <div class="modal fade" id="deleteModal-@item.EducationId" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Kaydı Sil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bu kaydı silmek istediğinizden emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                    <a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-outline-danger">Evet</a>
                </div>
            </div>
        </div>
    </div>
    <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-outline-success">Güncelle</a></td>
</tr>

    }



</table>

<a href="/Education/AddEducation/" class="btn btn-outline-primary">Yeni Eğitim Bilgisi Ekle</a>
