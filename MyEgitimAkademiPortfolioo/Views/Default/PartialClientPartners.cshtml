@using MyEgitimAkademiPortfolioo.Models;

@model List<MyEgitimAkademiPortfolioo.Models.Customer>

<section class="w3l-homeblock3" id="clients">
    <div class="midd-w3 py-5">
        <div class="container py-lg-5 py-md-3">

            @foreach (var item in Model)
            {

            <div class="row">
                <div class="col-lg-6">

                    <span class="text">@item.Title </span>
                    <h3 class="title-big">

                        <span> </span>
                    </h3>
                    <p class="mt-4">
                        @item.Introduction
                    </p>
                    <div class="reward-list mt-5">
                        <div class="reward-item">
                            <div class="reward-item-photo">
                                @item.Deger
                            </div>
                            <div class="reward-item-detail">
                                <span class="reward-item-title">@item.DegerDescription</span>

                            </div>
                        </div>

                    </div>
                </div>
                

                             
                <div class="col-lg-6 align-self text-center mt-lg-0 mt-md-5 mt-4">
                    <div class="images">
                        <img src="@item.Resim1" class="img-fluid" alt="" />
                       
                    </div>
                </div>
                
            </div>
            }
        </div>
    </div>
</section>
