﻿@model List<MyEgitimAkademiPortfolioo.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İş Ortaklarım Düzenleme Sayfası</h2>


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Giriş</th>
        <th><center>Açıklama</center></th>
        <th><center>Değer</center></th>
        <th><center>Değer Açıklaması</center></th>
        <th><center>Resim</center></th>
  
   

        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)

    {
        <tr>

            <td>@item.CustomerID</td>
            <td>@item.Title</td>
            <td>@item.Introduction</td>
            <td>@item.Deger</td>
            <td>@item.DegerDescription</td>
            <td>@item.Resim1</td>
           


            <td>
                <a href="#" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal-@item.CustomerID">Sil</a>
            </td>

            <div class="modal fade" id="deleteModal-@item.CustomerID" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Kaydı Sil</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bu kaydı silmek istediğinizden emin misiniz?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                            <a href="/Customer/DeleteCustomer/@item.CustomerID" class="btn btn-outline-danger">Evet</a>
                        </div>
                    </div>
                </div>
            </div>
            <td>
                <a class="btn btn-outline-success" href="/Customer/UpdateCustomer/@item.CustomerID">Güncelle</a>
            </td>
        </tr>
    }

</table>
<br />


<a href="/Customer/AddCustomer/" class="btn btn-outline-primary">Yeni Ekle</a>