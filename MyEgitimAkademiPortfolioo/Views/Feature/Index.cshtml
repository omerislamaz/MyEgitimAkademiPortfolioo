﻿@model List <MyEgitimAkademiPortfolioo.Models.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Özellik Ekran Ayarları</h2>

<table class="table table-bordered">
    <tr>
        <th>İsim Soyisim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th><center>Tanımlama</center></th>
       
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>


    @foreach (var item in Model)
    
    {
        <tr>
           
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Introduction</td>
            <td>@item.Description</td>
           
            
            <td>
                <a href="#" class="btn btn-outline-danger" data-toggle="modal" data-target="#deleteModal-@item.AboutID">Sil</a>
            </td>

            <div class="modal fade" id="deleteModal-@item.AboutID" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Kaydı Sil</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bu kaydı silmek istediğinizden emin misiniz?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır</button>
                            <a href="/Feature/DeleteFeature/@item.AboutID" class="btn btn-outline-danger">Evet</a>
                        </div>
                    </div>
                </div>
            </div>
            <td>
                <a class="btn btn-outline-success" href="/Feature/UpdateFeature/@item.AboutID">Güncelle</a>
            </td>
        </tr>
    }

</table>
<br />  


<a href="/Feature/AddFeature/" class="btn btn-outline-primary">Yeni Ekle</a>